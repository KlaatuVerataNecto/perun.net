            crossorigin="anonymous"
            integrity="sha256-eO9VTVeZLaplH86Iwt8l39+l7GZpLOTsVWYziS5oY0Q="></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.1.3/cropper.min.js"
            asp-fallback-src="~/lib/cropperjs/dist/cropper.min.js"
            asp-fallback-test="window.Cropper"
            crossorigin="anonymous"
            integrity="sha256-bq5l5V1OLHsZ9XsWslrYp0L+t4lfUrPEdX+DbNiRJzI="></script>
</environment>