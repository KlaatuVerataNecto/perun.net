<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -  Perun.net core</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/bootstrap.flatly.min.css" />
        <link rel="stylesheet" href="~/lib/jquery.validate.password/jquery.validate.password.css" />
        <link rel="stylesheet" href="~/lib/cropperjs/dist/cropper.css" />
        <link rel="stylesheet" href="~/lib/dropzonejs/dist/dropzone.css" />
        <link rel="stylesheet" href="~/css/app.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/lib.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Perun.net core</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Post" asp-action="Create">Submit Content</a></li>
                    <li><a asp-area="" asp-controller="About" asp-action="Index">About</a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">@(((ClaimsIdentity)User.Identity).GetUserName()) <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="" asp-controller="User" asp-action="Index" asp-route-id="@(((ClaimsIdentity)User.Identity).GetUserId())" asp-route-username="@(((ClaimsIdentity)User.Identity).GetUserName())">Profile</a></li>
                                <li><a asp-area="" asp-controller="Settings" asp-action="Account">Settings</a></li>
                                <li><a asp-area="" asp-controller="User" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                   
                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="Login" asp-action="Index">Login</a></li>
                        <li><a asp-area="" asp-controller="Signup" asp-action="Index">Signup</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content v-buffers">
        @RenderBody()
    </div>
        <footer class="footer">
            <div class="container">
                <div class="col-lg-12 footer-content">                                            
                    <p>2017 - perun.net.core 0.22 (<environment names="Development">Development</environment><environment names="Staging">Staging</environment><environment names="Production">Production</environment>)</p>
                    <p>Created by <a href="http://klaatuveratanecto.com/" target="_blank">Klaatu Verata Necto</a> | <a asp-area="" asp-controller="Policies" asp-action="Privacy">Privacy &amp; Terms</a></p>
                </div>
            </div>
        </footer>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/jquery.validate.password/jquery.validate.password.js" asp-append-version="true"></script>
        <script src="~/lib/cropperjs/dist/cropper.js" asp-append-version="true"></script>
        <script src="~/lib/cropit/dist/jquery.cropit.js" asp-append-version="true"></script>
        <script src="~/lib/dropzonejs/dist/dropzone.js" asp-append-version="true"></script>
        <script src="~/js/infrastructure/perpagejs.js" asp-append-version="true"></script>
        <script src="~/js/infrastructure/validations.js" asp-append-version="true"></script>
        <script src="~/js/pages/profile.js" asp-append-version="true"></script>
        <script src="~/js/pages/post.js" asp-append-version="true"></script>
        <script src="~/js/app.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/lib.min.js" asp-append-version="true"></script>
        <script src="~/js/all.min.js" asp-append-version="true"></script>
    </environment>
    <mini-profiler position="@RenderPosition.BottomLeft" max-traces="5" />
</body>
</html>
