<environment names="Development">
    <link rel="stylesheet" href="~/lib/dropzone/dist/dropzone.css" />
    <link rel="stylesheet" href="~/lib/cropperjs/dist/cropper.css" />
</environment>
<environment names="Staging,Production">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.2.0/min/dropzone.min.css"
          asp-fallback-href="~/lib/dropzone/dist/min/dropzone.min.css"
          asp-fallback-test-class="dropzone"
          asp-fallback-test-property="min-height"
          asp-fallback-test-value="150px" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.1.3/cropper.min.css"
          asp-fallback-href="~/lib/cropperjs/dist/cropper.min.css"
          asp-fallback-test-class="cropper-container"
          asp-fallback-test-property="direction"
          asp-fallback-test-value="ltr" />
</environment>