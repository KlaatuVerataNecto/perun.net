@model peruncore.Models.User.ProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.CanUpdate)
{
@section Css { @{await Html.RenderPartialAsync("_ImageUploadCssPartial"); }}
@section Scripts {@{await Html.RenderPartialAsync("_ImageUploadScriptsPartial");}}
}
<div class="profile-cover">
    <div class="profile-cover-img" style="background-image: url(/demo/users/covers/demo.jpg)"></div>
    @if (Model.CanUpdate)
    {<span class="btn btn-default change-cover">
        <span class="glyphicon glyphicon-camera"></span>
        <span class="change-cover-text">Upload Cover Photo</span>
        <input type="file" accept="image/*" hidden />
     </span>
    }
    <div class="media">
        <div class="media-left profile-thumb">
            <div class="user-avatar ">
                <img src="@Model.Avatar" class="img-avatar img-circle" alt="" data-user-avatar />
                @if (Model.CanUpdate)
                {<span class="change-avatar">
                    <span class="glyphicon glyphicon-camera txt-change-avatar"></span>
                    <input type="file" id="file-change-avatar" accept="image/*" hidden />
                </span>
                }
            </div>    
        </div>

        <div class="media-body">
            <h1>@Model.Username<small class="display-block">Spain</small></h1>
        </div>
    </div>
</div>

@if (Model.CanUpdate)
{
<!-- Modal1 -->
<div id="crop-avatar-modal" tabindex="-1" aria-labelledby="crop-avatar-modal-label" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                Crop your avatar
            </div>
            
            <div class="modal-body text-center">
                <div class="img-cropper">
                    <img alt="" id="preview-image" />
                </div>
            </div>
            
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btn-avatar-upload">Save</button>
            </div>
        </div>
    </div>
</div>
}