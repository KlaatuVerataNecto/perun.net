@model peruncore.Models.User.EditPasswordModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Settings</h2>
<div class="row">
    <div class="col-xs-2">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs tabs-left">
            <li><a asp-area="" asp-controller="Settings" asp-action="Account">Account</a></li>
            <li class="active"><a asp-area="" asp-controller="Settings" asp-action="Logins">My Logins</a></li>
        </ul>
    </div>
    <div class="col-xs-10">
        <!-- Tab panes -->
        <div class="tab-content">
            <div class="tab-pane active" id="home">
                <h4>Change Password</h4>
                <hr />
                @if (TempData.ContainsKey("password_change_ok"))
                {
                    <div class="alert alert-success">@TempData["password_change_ok"].ToString()</div>
                    TempData.Remove("password_change_ok");
                }
                <form asp-action="ChangePassword">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label asp-for="password" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="password" class="form-control" />
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Password strength</label>
                            <div class="col-md-10">
                                <div class="password-meter">
                                    <div class="password-meter-message"> </div>
                                    <div class="password-meter-bg"><div class="password-meter-bar"></div></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="password_confirm" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="password_confirm" class="form-control" />
                                <span asp-validation-for="password_confirm" class="text-danger"></span>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <label asp-for="current_password" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="current_password" class="form-control" />
                                <span asp-validation-for="current_password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-info pull-right">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<form><input type="hidden" id="page" value="password" /></form>