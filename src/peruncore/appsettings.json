{
  "ConnectionStrings": {
    "MySQLDatabase": "server=localhost;userid=user;pwd=password;port=3306;database=peruncore;sslmode=none;"
  },
    "ImageUploadSettings": {
      "UploadPath": "wwwroot/upload",
      "AvatarImagePath": "wwwroot/images",
      "DefaultImageExtension": ".jpg",
      "UserAvatarWidth": 300,
      "UserAvatarHeight": 300
    },
    "SocialLoginSettings": {
      "GoogleClientId": "clientid",
      "GoogleClientSecret": "secret",
      "FacebookClientId": "clientid",
      "FacebookClientSecret": "secret",
      "TwitterConsumerKey": "clientid",
      "TwitterConsumerSecret": "secret"
    },
      "AuthSchemeSettings": {
      "Application": "Application",
      "External": "External",
      "Google": "Google",
      "Facebook": "Facebook",
      "Twitter": "Twitter",
      "ExpiryDays": 30
    },
    "AuthSettings": {
      "SaltLength": 16,
      "ExpiryDays": 1,
      "ResetTokenLength": 150
    },
    "EmailSettings": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "isSSL": true,
      "From": "peruncore@gmail.com",
      "Fromname": "Perun Core",
      "Username": "peruncore@gmail.com",
      "Password": "password"
    },
    "Logging": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Serilog": {
      "MinimumLevel": "Debug",
      "WriteTo": [
        {
          "Name": "RollingFile",
          "Args": {
            "pathFormat": "log/peruncore-{Date}.log",
            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{Address}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}"
          }
        }
      ]
    }
  }
